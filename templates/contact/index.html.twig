{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
    <h1 class="display-4 mt-5 mb-5" style="text-align: center;">Liste des Contacts</h1>
    <h4 style="font-weight: bold;">Filtres</h4>
    <div>
        {% include 'contact/_filter.html.twig' with {form: form } only %}
    </div>
    <table class="table">
        <caption>Liste des contacts de la base de données</caption>
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Adresse</th>
                <th scope="col">Ville</th>
                <th scope="col">Code Postal</th>
                <th scope="col">Telephone</th>
                <th scope="col">Email</th>
                <th scope="col">Fonction</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Promotion</th>
                <th scope="col">Editer</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.adresse }}</td>
                <td>{{ contact.ville }} </td>
                <td>{{ contact.codePostal }} </td>
                <td>{{ contact.telephone }} </td>
                <td>{{ contact.email }} </td>
                <td>{{ contact.fonction }} </td>
                <td>{{ contact.entreprise }} </td>
                <td>{{ contact.promotion }} </td>
                <td>
                    <a class="btn btn-btn btn-success btn-md"  href="{{ path('contact_edit', {'id': contact.id}) }}">
                        <i class="fas fa-edit">Editer</i>
                    </a>               
                </td>
                <td>
                    <a class="btn btn-danger btn-md"  href="{{ path('contact_delete', {'id': contact.id}) }}">
                        <i class="far fa-trash-alt">Supprimer</i>
                   </a>
                </td>
    
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Pas de contacts trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <a id="btnNouveau" href="{{ path('contact_new') }}"> + Créer un nouveau contact</a> 
    </div>

    <style>
        caption {
            color: #000000;
        }

        .btn-primary {
            color: #000;
            margin-bottom: 10px;
        }

        #btnNouveau{
            color: #ff0000;
            font-size: 20px;
        }
     
    </style>
{% endblock %}


